<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/camTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Camara"
        tools:ignore="HardcodedText"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:textSize="30sp"/>

    <TextView
        android:id="@+id/audioTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Audio"
        tools:ignore="HardcodedText"
        android:layout_below="@+id/camTxt"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:textSize="30sp"/>

    <TextView
        android:id="@+id/ubicacionTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ubicacion"
        tools:ignore="HardcodedText"
        android:layout_below="@+id/audioTxt"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:textSize="30sp"/>

    <Switch
        android:id="@+id/cam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/camTxt"
        android:checked="false"
        android:layout_toEndOf="@+id/camTxt" />

    <Switch
        android:id="@+id/audio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/audioTxt"
        android:layout_below="@+id/cam"
        android:checked="false"
        android:layout_toEndOf="@+id/audioTxt" />

    <Switch
        android:id="@+id/ubicacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/ubicacionTxt"
        android:layout_below="@+id/audio"
        android:checked="false"
        android:layout_toEndOf="@+id/ubicacionTxt" />

</RelativeLayout>